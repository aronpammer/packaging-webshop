<!DOCTYPE html>
<html lang="en">
<head>
    <% title = siteSettings.storePageTitle; %>
    <% metaDescription = siteSettings.storePageMetaDescription; %>
    <%- include('partials/head') %>
</head>
<body>
    <%- include('partials/header') %>

    <!-- Breadcrumb -->
    <div class="breadcrumb">
        <div class="container">
            <p><a href="/"><%= siteSettings.homeText %></a> / <%= siteSettings.storeText %></p>
        </div>
    </div>

    <!-- Store Content -->
    <section class="store-section">
        <div class="container">
            <div class="store-layout">
                <!-- Sidebar Filters -->
                <aside class="store-sidebar">
                    <!-- Search -->
                    <div class="filter-group">
                        <h3 class="filter-title"><%= siteSettings.searchProductsText %></h3>
                        <form method="GET" action="/store" class="search-form">
                            <div class="search-input-group">
                                <input type="text" name="search" placeholder="<%= siteSettings.searchPlaceholderText %>" value="<%= searchQuery %>" class="search-input">
                                <button type="submit" class="search-btn">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                            <% if (currentCategory) { %>
                                <input type="hidden" name="category" value="<%= currentCategory %>">
                            <% } %>
                        </form>
                    </div>

                    <!-- Categories Filter -->
                    <div class="filter-group">
                        <h3 class="filter-title"><%= siteSettings.footerCategoriesTitle %></h3>
                        <div class="filter-options">
                            <a href="/store" class="filter-option <% if (!currentCategory) { %>active<% } %>">
                                <span class="filter-label"><%= siteSettings.allCategoriesText %></span>
                                <span class="filter-count">(<%= totalProductCount %>)</span>
                            </a>
                            <% categories.forEach(category => { %>
                                <a href="/store?category=<%= category.slug %>" class="filter-option <% if (currentCategory === category.slug) { %>active<% } %>">
                                    <span class="filter-label"><%= category.name %></span>
                                    <span class="filter-count">(<%= category.productCount %>)</span>
                                </a>
                            <% }) %>
                        </div>
                    </div>

                    <!-- Clear Filters -->
                    <% if (currentCategory || searchQuery) { %>
                        <div class="filter-group">
                            <a href="/store" class="btn btn-secondary btn-block"><%= siteSettings.clearAllFiltersText %></a>
                        </div>
                    <% } %>
                </aside>

                <!-- Main Content -->
                <main class="store-main">
                    <!-- Results Header -->
                    <div class="store-results-header">
                        <div class="results-info">
                            <h2 class="results-title">
                                <% if (currentCategory) { %>
                                    <%= categories.find(cat => cat.slug === currentCategory)?.name || siteSettings.categoryText %>
                                <% } else if (searchQuery) { %>
                                    <%= siteSettings.searchResultsText %>
                                <% } else { %>
                                    <%= siteSettings.allProductsText %>
                                <% } %>
                            </h2>
                            <p class="results-count"><%= products.length %> <%= products.length === 1 ? siteSettings.productFoundText : siteSettings.productsFoundText %> <%= siteSettings.foundText %></p>
                        </div>
                        <!-- Sort Options -->
                        <div class="sort-options">
                            <select class="sort-select">
                                <option value="default"><%= siteSettings.sortByDefaultText %></option>
                                <option value="name"><%= siteSettings.nameAZText %></option>
                                <option value="name-desc"><%= siteSettings.nameZAText %></option>
                                <option value="newest"><%= siteSettings.newestFirstText %></option>
                            </select>
                        </div>
                    </div>

                    <!-- Products Grid -->
                    <div class="store-content">
                        <% if (products.length === 0) { %>
                            <div class="no-results">
                                <div class="no-results-icon">
                                    <i class="fas fa-search"></i>
                                </div>
                                <h3><%= siteSettings.noProductsFoundTitle %></h3>
                                <p><%= siteSettings.noProductsFoundText %></p>
                                <a href="/store" class="btn btn-primary"><%= siteSettings.viewAllProductsButtonText %></a>
                            </div>
                        <% } else { %>
                            <div class="products-grid">
                                <% products.forEach(product => { %>
                                    <a href="/product/<%= product.slug %>" class="card product-card product-card-link">
                                        <% if (product.image) { %>
                                            <img src="<%= product.image.url %>" alt="<%= product.name %>" class="card-img">
                                        <% } else { %>
                                            <div class="card-img card-img-placeholder">
                                                <i class="fas fa-image"></i>
                                            </div>
                                        <% } %>
                                        <div class="card-body">
                                            <h3 class="card-title"><%= product.name %></h3>
                                            <p class="card-text"><%= product.shortDescription || siteSettings.professionalPackagingEquipmentText %></p>
                                            <% if (product.category?.name) { %>
                                                <span class="badge"><%= product.category.name %></span>
                                            <% } %>
                                        </div>
                                    </a>
                                <% }) %>
                            </div>
                        <% } %>
                    </div>
                </main>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>
</body>
</html>