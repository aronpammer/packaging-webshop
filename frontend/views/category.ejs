<!DOCTYPE html>
<html lang="en">
<head>
    <% title = category.name; %>
    <% metaDescription = category.description; %>
    <%- include('partials/head') %>
</head>
<body>
    <% currentCategory = category; %>
    <%- include('partials/header') %>

    <main>
    <!-- Breadcrumb -->
    <div class="breadcrumb">
        <div class="container">
            <p><a href="/"><%= siteSettings.homeText %></a> / <%= category.name %></p>
        </div>
    </div>

    <!-- Category Header -->
    <section class="section">
        <div class="container">
            <div class="row">
                <div class="col-8">
                    <h1 style="margin-bottom: 10px;"><%= category.name %></h1>
                    <p style="font-size: 1.1rem; margin-bottom: 0;"><%= category.description %></p>
                </div>
                <div class="col-4">
                    <% if (category.image) { %>
                        <img src="<%= category.image.url %>" alt="<%= category.name %>" style="width: 100%; border-radius: var(--border-radius);">
                    <% } %>
                </div>
            </div>
        </div>
    </section>

    <!-- Subcategories Section -->
    <% if (subcategories && subcategories.length > 0) { %>
    <section class="section" style="background: #f8f9fa;">
        <div class="container">
            <div class="categories-grid" style="display: grid; grid-template-columns: repeat(auto-fill, minmax(300px, 1fr)); gap: 30px;">
                <% subcategories.forEach(subcat => { %>
                    <a href="/product-category/<%= subcat.slug %>" class="card category-card" style="text-decoration: none; color: inherit; transition: transform 0.2s, box-shadow 0.2s; cursor: pointer; display: block;">
                        <% if (subcat.image) { %>
                            <img src="<%= subcat.image.url %>" alt="<%= subcat.name %>" class="card-img">
                        <% } else { %>
                            <div class="card-img" style="background: var(--light-gray); display: flex; align-items: center; justify-content: center; height: 200px;">
                                <i class="fas fa-folder" style="font-size: 3rem; color: var(--dark-gray);"></i>
                            </div>
                        <% } %>
                        <div class="card-body">
                            <h3 class="card-title"><%= subcat.name %></h3>
                            <% if (subcat.description) { %>
                                <p class="card-text"><%= subcat.description %></p>
                            <% } %>
                        </div>
                    </a>
                <% }) %>
            </div>
        </div>
    </section>
    <style>
        .category-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
        }
    </style>
    <% } %>

    <!-- Products Section -->
    <% if (products.length > 0) { %>
    <section class="section" style="background: <%= subcategories && subcategories.length > 0 ? '#ffffff' : '#f8f9fa' %>;">
        <div class="container">
            <h2 style="text-align: center; margin-bottom: 50px;"><%= category.name %> <%= siteSettings.productsText %></h2>
            <div class="products-grid">
                <% products.forEach(product => { %>
                    <div class="card product-card">
                        <% if (product.image) { %>
                            <img src="<%= product.image.url %>" alt="<%= product.name %>" class="card-img">
                        <% } else { %>
                            <div class="card-img" style="background: var(--light-gray); display: flex; align-items: center; justify-content: center;">
                                <i class="fas fa-image" style="font-size: 3rem; color: var(--dark-gray);"></i>
                            </div>
                        <% } %>
                        <div class="card-body">
                            <h3 class="card-title"><%= product.name %></h3>
                            <p class="card-text"><%= product.shortDescription || siteSettings.professionalPackagingEquipmentText %></p>
                            <% if (product.featured) { %>
                                <span class="badge"><%= siteSettings.featuredBadgeText %></span>
                                <br><br>
                            <% } %>
                            <a href="/product/<%= product.slug %>" class="btn btn-primary"><%= siteSettings.learnMoreText %></a>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>
    <% } else if (!subcategories || subcategories.length === 0) { %>
    <section class="section" style="text-align: center; background: #f8f9fa;">
        <div class="container">
            <h2><%= siteSettings.noProductsAvailableTitle %></h2>
            <p><%= siteSettings.noProductsAvailableText %></p>
            <a href="/contact" class="btn btn-primary"><%= siteSettings.contactUsText %></a>
        </div>
    </section>
    <% } %>
    </main>

    <%- include('partials/footer') %>
</body>
</html>