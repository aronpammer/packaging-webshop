<!DOCTYPE html>
<html lang="en">
<head>
    <% title = category.name; %>
    <% metaDescription = category.description; %>
    <%- include('partials/head') %>
</head>
<body>
    <% currentCategory = category; %>
    <%- include('partials/header') %>

    <main>
    <!-- Breadcrumb -->
    <div class="breadcrumb">
        <div class="container">
            <p><a href="/"><%= siteSettings.homeText %></a> / <%= category.name %></p>
        </div>
    </div>

    <!-- Category Header -->
    <section class="section">
        <div class="container">
            <div class="row">
                <div class="col-8">
                    <h1 style="margin-bottom: 10px;"><%= category.name %></h1>
                    <p style="font-size: 1.1rem; margin-bottom: 0;"><%= category.description %></p>
                </div>
                <div class="col-4">
                    <% if (category.image) { %>
                        <img src="<%= category.image.url %>" alt="<%= category.name %>" style="width: 100%; border-radius: var(--border-radius);">
                    <% } %>
                </div>
            </div>
        </div>
    </section>

    <!-- Subcategories Section -->
    <% if (subcategories && subcategories.length > 0) { %>
    <section class="categories-modern">
        <div class="container">
            <div class="categories-grid-simple">
                <% subcategories.forEach(subcat => { %>
                    <a href="/product-category/<%= subcat.slug %>" class="category-card-simple">
                        <div class="category-image-container">
                            <% if (subcat.image) { %>
                                <img src="<%= subcat.image.url %>" alt="<%= subcat.name %>" class="category-image">
                            <% } else { %>
                                <div style="width: 100%; height: 100%; background: #f8f9fa; display: flex; align-items: center; justify-content: center;">
                                    <i class="fas fa-folder" style="font-size: 3rem; color: #ddd;"></i>
                                </div>
                            <% } %>
                        </div>
                        <div class="category-info">
                            <h3 class="category-title"><%= subcat.name %></h3>
                            <% if (subcat.description) { %>
                                <p class="category-desc"><%= subcat.description %></p>
                            <% } else { %>
                                <p class="category-desc"><%= siteSettings.professionalSolutionsText || 'Professional solutions' %></p>
                            <% } %>
                        </div>
                    </a>
                <% }) %>
            </div>
        </div>
    </section>
    <% } %>

    <!-- Products Section -->
    <% if (products.length > 0) { %>
    <section class="featured-products-modern">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title-modern"><%= category.name %> <%= siteSettings.productsText %></h2>
                <% if (category.description) { %>
                    <p class="section-subtitle"><%= category.description %></p>
                <% } %>
            </div>
            <div class="products-grid-modern">
                <% products.forEach(product => { %>
                    <div class="product-card-modern">
                        <div class="product-image-wrapper">
                            <% if (product.image) { %>
                                <img src="<%= product.image.url %>" alt="<%= product.name %>" class="product-image-modern">
                            <% } else { %>
                                <div style="width: 100%; height: 100%; background: #f8f9fa; display: flex; align-items: center; justify-content: center;">
                                    <i class="fas fa-image" style="font-size: 3rem; color: #ddd;"></i>
                                </div>
                            <% } %>
                            <% if (product.featured) { %>
                                <span class="badge-modern"><%= siteSettings.featuredBadgeText %></span>
                            <% } %>
                        </div>
                        <div class="product-content-modern">
                            <h3 class="product-title-modern"><%= product.name %></h3>
                            <p class="product-desc-modern"><%= product.shortDescription || siteSettings.professionalPackagingEquipmentText %></p>
                            <div class="product-footer-modern">
                                <a href="/product/<%= product.slug %>" class="btn btn-primary btn-sm"><%= siteSettings.learnMoreText %></a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>
    <% } else if (!subcategories || subcategories.length === 0) { %>
    <section class="section" style="text-align: center; background: #f8f9fa;">
        <div class="container">
            <h2><%= siteSettings.noProductsAvailableTitle %></h2>
            <p><%= siteSettings.noProductsAvailableText %></p>
            <a href="/contact" class="btn btn-primary"><%= siteSettings.contactUsText %></a>
        </div>
    </section>
    <% } %>
    </main>

    <%- include('partials/footer') %>
</body>
</html>