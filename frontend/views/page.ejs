<!DOCTYPE html>
<html lang="en">
<head>
    <% title = page.title; %>
    <% metaDescription = page.metaDescription || page.title; %>
    <%- include('partials/head') %>
    <style>
    .page-content {
        margin-top: 30px;
    }
    .page-content p {
        margin-bottom: 20px;
        line-height: 1.7;
    }
    .page-content h2 {
        margin-top: 40px;
        margin-bottom: 20px;
        color: var(--primary-color);
    }
    .page-content h3 {
        margin-top: 30px;
        margin-bottom: 15px;
        color: var(--primary-color);
    }
    .page-content ul, .page-content ol {
        margin: 20px 0;
        padding-left: 30px;
    }
    .page-content li {
        margin-bottom: 8px;
    }
    </style>
</head>
<body>
    <%- include('partials/header') %>

    <!-- Breadcrumb -->
    <div class="breadcrumb">
        <div class="container">
            <p><a href="/"><%= siteSettings.homeText %></a> / <%= page.title %></p>
        </div>
    </div>

    <!-- Page Content -->
    <section class="section">
        <div class="container">
            <h1><%= page.title %></h1>
            <div class="page-content">
                <%- page.content %>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>
</body>
</html>