<!DOCTYPE html>
<html lang="en">
<head>
    <% title = siteSettings.homePageTitle; %>
    <% metaDescription = siteSettings.homePageMetaDescription; %>
    <%- include('partials/head') %>
</head>
<body>
    <%- include('partials/header') %>

    <main>
    <!-- Hero Section -->
    <section class="hero-simple" <% if (heroContent.backgroundImage) { %>style="background-image: url('<%= heroContent.backgroundImage %>')"<% } %>>
        <div class="container">
            <div class="hero-content-simple">
                <h1 class="hero-title-simple"><%= heroContent.title %></h1>
                <p class="hero-description-simple"><%= heroContent.description %></p>
                <div class="hero-actions-simple">
                    <a href="<%= heroContent.buttonLink %>" class="btn btn-primary"><%= heroContent.buttonText %></a>
                    <% if (actionButtons.getQuote.show) { %>
                        <a href="<%= actionButtons.getQuote.link %>" class="btn btn-secondary"><%= actionButtons.getQuote.text %></a>
                    <% } %>
                </div>
            </div>
        </div>
    </section>

    <!-- Categories or Latest Products Section -->
    <% if (homepage?.showCategoriesSection !== false && !showLatestProducts) { %>
        <section class="categories-modern">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title-modern"><%= homepage?.categoriesSectionTitle || siteSettings.categoriesSectionTitle %></h2>
                    <p class="section-subtitle"><%= homepage?.categoriesSectionSubtitle || siteSettings.categoriesSectionSubtitle %></p>
                </div>
                <div class="categories-grid-simple">
                    <% (productCategories || []).forEach((category) => { %>
                        <a href="/product-category/<%= category.slug %>" class="category-card-simple">
                            <div class="category-image-container">
                                <% if (category.image) { %>
                                    <img src="<%= category.image.url %>" alt="<%= category.name %>" class="category-image">
                                <% } else { %>
                                    <div class="category-no-image">
                                        <div class="no-image-icon">üì∑</div>
                                        <span class="no-image-text"><%= siteSettings.noImageText %></span>
                                    </div>
                                <% } %>
                            </div>
                            <div class="category-info">
                                <h3 class="category-title"><%= category.name %></h3>
                                <p class="category-desc"><%= category.description || siteSettings.professionalSolutionsText %></p>
                            </div>
                        </a>
                    <% }) %>
                </div>
            </div>
        </section>
    <% } else if (showLatestProducts && latestProducts.length > 0) { %>
        <section class="latest-products-modern">
            <div class="container">
                <div class="section-header">
                    <h2 class="section-title-modern">Legfrissebb term√©kek</h2>
                    <p class="section-subtitle">Tekintse meg leg√∫jabban felt√∂lt√∂tt term√©keink</p>
                </div>
                <div class="products-grid-modern">
                    <% latestProducts.forEach(product => { %>
                        <div class="product-card-modern">
                            <div class="product-image-wrapper">
                                <% if (product.image) { %>
                                    <img src="<%= product.image.url %>" alt="<%= product.name %>" class="product-image-modern">
                                <% } else { %>
                                    <div class="product-image-placeholder">
                                        <i class="fas fa-image"></i>
                                    </div>
                                <% } %>
                                <% if (product.category?.name) { %>
                                    <div class="product-category-badge"><%= product.category.name %></div>
                                <% } %>
                            </div>
                            <div class="product-info-modern">
                                <h3 class="product-name-modern"><%= product.name %></h3>
                                <p class="product-description-modern"><%= product.shortDescription || siteSettings.professionalPackagingEquipmentText %></p>
                                <a href="/product/<%= product.slug %>" class="product-link-modern">
                                    <span><%= siteSettings.learnMoreText %></span>
                                    <i class="fas fa-arrow-right"></i>
                                </a>
                            </div>
                        </div>
                    <% }) %>
                </div>
                <% if (actionButtons.viewAllProducts.show) { %>
                <div class="featured-cta">
                    <a href="<%= actionButtons.viewAllProducts.link %>" class="btn btn-primary btn-lg"><%= actionButtons.viewAllProducts.text %></a>
                </div>
                <% } %>
            </div>
        </section>
    <% } %>

    <!-- Featured Products -->
    <% if (featuredProducts.length > 0 && homepage?.showFeaturedProductsSection !== false) { %>
    <section class="featured-products-modern">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title-modern"><%= homepage?.featuredProductsSectionTitle || siteSettings.featuredProductsSectionTitle %></h2>
                <p class="section-subtitle"><%= homepage?.featuredProductsSectionSubtitle || siteSettings.featuredProductsSectionSubtitle %></p>
            </div>
            <div class="products-grid-modern">
                <% featuredProducts.forEach(product => { %>
                    <div class="product-card-modern">
                        <div class="product-image-wrapper">
                            <% if (product.image) { %>
                                <img src="<%= product.image.url %>" alt="<%= product.name %>" class="product-image-modern">
                            <% } else { %>
                                <div class="product-image-placeholder">
                                    <i class="fas fa-image"></i>
                                </div>
                            <% } %>
                            <% if (product.category?.name) { %>
                                <div class="product-category-badge"><%= product.category.name %></div>
                            <% } %>
                        </div>
                        <div class="product-info-modern">
                            <h3 class="product-name-modern"><%= product.name %></h3>
                            <p class="product-description-modern"><%= product.shortDescription || siteSettings.professionalPackagingEquipmentText %></p>
                            <a href="/product/<%= product.slug %>" class="product-link-modern">
                                <span><%= siteSettings.learnMoreText %></span>
                                <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                    </div>
                <% }) %>
            </div>
            <% if (actionButtons.viewAllProducts.show) { %>
            <div class="featured-cta">
                <a href="<%= actionButtons.viewAllProducts.link %>" class="btn btn-primary btn-lg"><%= actionButtons.viewAllProducts.text %></a>
            </div>
            <% } %>
        </div>
    </section>
    <% } %>
    </main>

    <%- include('partials/footer') %>
</body>
</html>