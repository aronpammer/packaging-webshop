<!-- Footer -->
<footer class="footer">
    <div class="container">
        <div class="footer-content">
            <div class="footer-left">
                <h4><%= siteSettings.companyName %></h4>
                <% if (siteSettings.companyMotto) { %>
                    <p class="company-motto"><%= siteSettings.companyMotto %></p>
                <% } %>
            </div>
            <div class="footer-right">
                <div class="contact-details">
                    <div class="contact-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <span><%= siteSettings.address %></span>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-phone"></i>
                        <a href="tel:<%= siteSettings.phone %>"><%= siteSettings.phone %></a>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-envelope"></i>
                        <a href="mailto:<%= siteSettings.email %>"><%= siteSettings.email %></a>
                    </div>
                    <div class="contact-item">
                        <i class="fas fa-clock"></i>
                        <span><%= siteSettings.businessHours %></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; <%= siteSettings.copyrightText %></p>
        </div>
    </div>
</footer>