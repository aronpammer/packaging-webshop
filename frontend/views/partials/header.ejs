<!-- Sidebar -->
<div class="sidebar-overlay" onclick="closeSidebar()"></div>
<div class="sidebar" id="sidebar">
    <!-- Main Panel -->
    <div class="sidebar-panel active" id="main-panel">
        <div class="sidebar-header">
            <i class="fas fa-user-circle"></i>
            <span><%= siteSettings.sidebarWelcomeText %></span>
            <button class="sidebar-close" onclick="closeSidebar()">&times;</button>
        </div>

        <div class="sidebar-content">
            <h3 class="sidebar-section-title"><%= siteSettings.sidebarDepartmentText %></h3>
            <ul class="sidebar-nav">
                <% if (productCategories && productCategories.length > 0) { %>
                    <% productCategories.forEach(category => { %>
                        <li>
                            <% if (category.childCategories && category.childCategories.length > 0) { %>
                                <a href="/product-category/<%= category.slug %>" onclick="event.preventDefault(); openCategoryPanel('<%= category.slug %>', '<%= category.name %>', <%= JSON.stringify(category.childCategories || []) %>)">
                                    <%= category.name %>
                                    <i class="fas fa-chevron-right nav-arrow"></i>
                                </a>
                            <% } else { %>
                                <a href="/product-category/<%= category.slug %>">
                                    <%= category.name %>
                                </a>
                            <% } %>
                        </li>
                    <% }) %>
                <% } %>
            </ul>
        </div>
    </div>

    <!-- Dynamic Category Panel -->
    <div class="sidebar-panel" id="category-panel">
        <div class="sidebar-subheader">
            <button class="sidebar-back" onclick="slideBack()">
                <i class="fas fa-arrow-left"></i>
            </button>
            <span class="panel-title">MAIN MENU</span>
        </div>
        <div class="sidebar-content" id="category-content">
            <!-- Content will be dynamically inserted here -->
        </div>
    </div>

    <!-- Sub-subcategory Panel -->
    <div class="sidebar-panel" id="subcategory-panel">
        <div class="sidebar-subheader">
            <button class="sidebar-back" onclick="slideBackFromSub()">
                <i class="fas fa-arrow-left"></i>
            </button>
            <span class="panel-title">SUB MENU</span>
        </div>
        <div class="sidebar-content" id="subcategory-content">
            <!-- Content will be dynamically inserted here -->
        </div>
    </div>
</div>

<!-- Header -->
<header class="header">
    <!-- Top Navigation Bar -->
    <div class="header-top">
        <div class="container">
            <div class="header-top-content">
                <!-- Logo -->
                <div class="logo">
                    <a href="/">
                        <% if (siteSettings.logo && siteSettings.logo.url) { %>
                            <img src="<%= siteSettings.logo.url.startsWith('http') ? siteSettings.logo.url : 'http://localhost:1337' + siteSettings.logo.url %>"
                                 alt="<%= siteSettings.companyName %>"
                                 class="logo-image" />
                        <% } else { %>
                            <%= siteSettings.companyName %>
                        <% } %>
                    </a>
                </div>

                <!-- Search Bar -->
                <div class="search-container">
                    <input type="text" placeholder="<%= siteSettings.headerSearchPlaceholder || 'Search products' %>">
                    <button type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>

                <!-- Business Info -->
                <div class="business-info">
                    <div class="info-item">
                        <i class="fas fa-map-marker-alt"></i>
                        <span><%= siteSettings.address %></span>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-phone"></i>
                        <span><%= siteSettings.phone %></span>
                    </div>
                    <div class="info-item">
                        <i class="fas fa-clock"></i>
                        <span><%= siteSettings.businessHours %></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bottom Navigation Bar -->
    <div class="header-bottom">
        <div class="header-bottom-container">
            <ul class="bottom-nav">
                <!-- All Button -->
            <li>
                <button class="sidebar-toggle" onclick="openSidebar()">
                    <i class="fas fa-bars"></i>
                    <span><%= siteSettings.sidebarToggleText || 'All' %></span>
                </button>
            </li>

            <!-- Main Navigation -->
            <li><a href="/"><%= siteSettings.homeText || 'Home' %></a></li>

            <% if (typeof menuConfiguration !== 'undefined' && menuConfiguration && menuConfiguration.length > 0) { %>
                <% menuConfiguration.forEach(menuItem => { %>
                    <% if (menuItem.isActive) { %>
                        <% if (menuItem.children && menuItem.children.length > 0) { %>
                            <!-- Menu item with dropdown -->
                            <li class="nav-item-with-dropdown">
                                <a href="<%= menuItem.url %>" class="nav-link-dropdown">
                                    <%= menuItem.title %>
                                    <i class="fas fa-chevron-down dropdown-arrow"></i>
                                </a>
                                <div class="dropdown-menu">
                                    <% menuItem.children.forEach(subItem => { %>
                                        <% if (subItem.isActive) { %>
                                            <% if (subItem.children && subItem.children.length > 0) { %>
                                                <!-- Submenu with nested dropdown -->
                                                <div class="dropdown-item-with-submenu">
                                                    <a href="<%= subItem.url %>" class="dropdown-item">
                                                        <%= subItem.title %>
                                                        <i class="fas fa-chevron-right submenu-arrow"></i>
                                                    </a>
                                                    <div class="submenu">
                                                        <% subItem.children.forEach(subSubItem => { %>
                                                            <% if (subSubItem.isActive) { %>
                                                                <a href="<%= subSubItem.url %>" class="submenu-item"><%= subSubItem.title %></a>
                                                            <% } %>
                                                        <% }) %>
                                                    </div>
                                                </div>
                                            <% } else { %>
                                                <!-- Regular submenu item -->
                                                <a href="<%= subItem.url %>" class="dropdown-item"><%= subItem.title %></a>
                                            <% } %>
                                        <% } %>
                                    <% }) %>
                                </div>
                            </li>
                        <% } else { %>
                            <!-- Menu item without dropdown -->
                            <li><a href="<%= menuItem.url %>"><%= menuItem.title %></a></li>
                        <% } %>
                    <% } %>
                <% }) %>
            <% } %>
        </ul>
        </div>
    </div>
</header>

<script>
// Store navigation history for back button
let navigationHistory = [];
let currentPanel = 'main';

// Sidebar Functions
function openSidebar() {
    const sidebar = document.getElementById('sidebar');
    const overlay = document.querySelector('.sidebar-overlay');
    sidebar.classList.add('active');
    overlay.classList.add('active');
    document.body.style.overflow = 'hidden';

    // Reset to main panel
    resetToMainPanel();
}

function closeSidebar() {
    const sidebar = document.getElementById('sidebar');
    const overlay = document.querySelector('.sidebar-overlay');
    sidebar.classList.remove('active');
    overlay.classList.remove('active');
    document.body.style.overflow = '';

    // Reset panels when closing
    setTimeout(() => {
        resetToMainPanel();
    }, 300);
}

function resetToMainPanel() {
    document.querySelectorAll('.sidebar-panel').forEach(panel => {
        panel.classList.remove('active', 'slide-out-left', 'slide-in-right');
    });
    document.getElementById('main-panel').classList.add('active');
    navigationHistory = [];
    currentPanel = 'main';
}

function openCategoryPanel(categorySlug, categoryName, childCategories) {
    const mainPanel = document.getElementById('main-panel');
    const categoryPanel = document.getElementById('category-panel');
    const categoryContent = document.getElementById('category-content');
    const panelTitle = categoryPanel.querySelector('.panel-title');

    // Update panel title
    panelTitle.textContent = 'MAIN MENU';

    // Build category content - same style as main menu
    let html = `<a href="/product-category/${categorySlug}" class="sidebar-section-title-link">
                    <h3 class="sidebar-section-title">${categoryName}</h3>
                </a>
                <ul class="sidebar-nav">`;

    if (childCategories && childCategories.length > 0) {
        childCategories.forEach(subcat => {
            const hasChildren = subcat.childCategories && subcat.childCategories.length > 0;
            if (hasChildren) {
                html += `<li>
                    <a href="/product-category/${subcat.slug}" onclick="event.preventDefault(); openSubcategoryPanel('${subcat.slug}', '${subcat.name}', ${JSON.stringify(subcat.childCategories || [])}, '/product-category/${subcat.slug}')">
                        ${subcat.name}
                        <i class="fas fa-chevron-right nav-arrow"></i>
                    </a>
                </li>`;
            } else {
                html += `<li>
                    <a href="/product-category/${subcat.slug}">
                        ${subcat.name}
                    </a>
                </li>`;
            }
        });
    }

    html += `</ul>`;
    categoryContent.innerHTML = html;

    // Add to history
    navigationHistory.push({ panel: 'main', data: null });
    currentPanel = 'category';

    // Animate panels
    mainPanel.classList.add('slide-out-left');
    categoryPanel.classList.add('active');

    setTimeout(() => {
        mainPanel.classList.remove('active');
    }, 300);
}

function openSubcategoryPanel(categorySlug, categoryName, childCategories, categoryUrl) {
    const categoryPanel = document.getElementById('category-panel');
    const subcategoryPanel = document.getElementById('subcategory-panel');
    const subcategoryContent = document.getElementById('subcategory-content');
    const panelTitle = subcategoryPanel.querySelector('.panel-title');

    // Update panel title
    panelTitle.textContent = 'MAIN MENU';

    // Build subcategory content - same style as main menu
