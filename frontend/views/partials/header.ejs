}

// Add function for even deeper navigation if needed
function openSubSubcategoryPanel(categorySlug, categoryName, childCategories, categoryUrl) {
    // For now, just navigate to the category page
    window.location.href = categoryUrl;
}

function slideBack() {
    if (navigationHistory.length > 0) {
        const previousState = navigationHistory.pop();
        const mainPanel = document.getElementById('main-panel');
        const categoryPanel = document.getElementById('category-panel');

        categoryPanel.classList.remove('active');
        categoryPanel.classList.add('slide-out-right');

        mainPanel.classList.remove('slide-out-left');
        mainPanel.classList.add('active');

        setTimeout(() => {
            categoryPanel.classList.remove('slide-out-right');
        }, 300);

        currentPanel = 'main';
    }
}

function slideBackFromSub() {
    if (navigationHistory.length > 0) {
        const previousState = navigationHistory.pop();
        const categoryPanel = document.getElementById('category-panel');
        const subcategoryPanel = document.getElementById('subcategory-panel');

        subcategoryPanel.classList.remove('active');
        subcategoryPanel.classList.add('slide-out-right');

        categoryPanel.classList.remove('slide-out-left');
        categoryPanel.classList.add('active');

        setTimeout(() => {
            subcategoryPanel.classList.remove('slide-out-right');
        }, 300);

        currentPanel = 'category';
    }
}

// Close sidebar with Escape key
document.addEventListener('keydown', function(event) {
    if (event.key === 'Escape') {
        closeSidebar();
    }
});
</script>

