                    <h3 class="sidebar-section-title">${categoryName}</h3>
                </a>
                <ul class="sidebar-nav">`;

    if (childCategories && childCategories.length > 0) {
        childCategories.forEach(cat => {
            const hasChildren = cat.childCategories && cat.childCategories.length > 0;
            if (hasChildren) {
                html += `<li>
                    <a href="/product-category/${cat.slug}" onclick="event.preventDefault(); openSubSubcategoryPanel('${cat.slug}', '${cat.name}', ${JSON.stringify(cat.childCategories || [])}, '/product-category/${cat.slug}')">
                        ${cat.name}
                        <i class="fas fa-chevron-right nav-arrow"></i>
                    </a>
                </li>`;
            } else {
                html += `<li>
                    <a href="/product-category/${cat.slug}">
                        ${cat.name}
                    </a>
