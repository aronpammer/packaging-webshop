<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title><%= typeof title !== 'undefined' ? title + ' - ' : '' %><%= siteSettings.companyName %></title>
<meta name="description" content="<%= typeof metaDescription !== 'undefined' ? metaDescription : siteSettings.metaDescription %>">
<link rel="stylesheet" href="/css/main.css">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
<style>
/* Critical CSS - Ensure overlays don't block content initially */
.sidebar-overlay {
    display: none !important;
}
.sidebar-overlay.active {
    display: block !important;
}
.sidebar {
    display: none !important;
}
.sidebar.active {
    display: block !important;
}
.mobile-dropdown-backdrop {
    display: none !important;
}
.mobile-dropdown-backdrop.active {
    display: block !important;
}

/* Force mobile dropdown to appear on top */
@media (max-width: 768px) {
    .nav-item-with-dropdown.active > .dropdown-menu {
        z-index: 999999 !important;
        position: fixed !important;
        bottom: 0 !important;
        left: 0 !important;
        right: 0 !important;
        background: white !important;
        display: block !important;
        opacity: 1 !important;
        visibility: visible !important;
    }
}
</style>
<script>
// Handle dynamic background images
document.addEventListener('DOMContentLoaded', function() {
    const elementsWithBgImage = document.querySelectorAll('[data-bg-image]');
    elementsWithBgImage.forEach(element => {
        const imageUrl = element.getAttribute('data-bg-image');
        if (imageUrl) {
            element.style.backgroundImage = `url('${imageUrl}')`;
        }
    });
});
</script>