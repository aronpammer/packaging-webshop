{
  "kind": "collectionType",
  "collectionName": "menu_items",
  "info": {
    "singularName": "menu-item",
    "pluralName": "menu-items",
    "displayName": "Menu Item",
    "description": "Configurable menu items for navigation"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "sortOrder": {
      "type": "integer",
      "default": 0,
      "required": true
    },
    "parentMenuItem": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::menu-item.menu-item",
      "inversedBy": "childMenuItems"
    },
    "childMenuItems": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::menu-item.menu-item",
      "mappedBy": "parentMenuItem"
    },
    "linkType": {
      "type": "enumeration",
      "enum": ["page", "product-category", "custom-url", "no-link"],
      "default": "page",
      "required": true
    },
    "customUrl": {
      "type": "string",
      "required": false
    },
    "targetPage": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::page.page"
    },
    "targetProductCategory": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product-category.product-category"
    },
    "openInNewTab": {
      "type": "boolean",
      "default": false
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "cssClass": {
      "type": "string",
      "required": false
    },
    "icon": {
      "type": "string",
      "required": false
    },
    "description": {
      "type": "text",
      "required": false
    }
  }
}