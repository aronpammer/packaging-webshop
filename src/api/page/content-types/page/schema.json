{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "singularName": "page",
    "pluralName": "pages",
    "displayName": "Page",
    "description": "Custom pages for the website"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "metaDescription": {
      "type": "string",
      "maxLength": 160
    },
    "showInFooter": {
      "type": "boolean",
      "default": true
    },
    "footerOrder": {
      "type": "integer",
      "default": 0
    }
  }
}